// Test: If/else expressions
// Expected output:
// yes
// no
// positive
// equal
// 10

// Simple if
if true {
    print("yes");
};

if false {
    print("should not print");
} else {
    print("no");
};

// With comparison
let x = 5;
if x > 0 {
    print("positive");
} else {
    print("negative");
};

// Equality check
let a = 10;
let b = 10;
if a == b {
    print("equal");
} else {
    print("not equal");
};

// If as expression
let result = if 10 > 5 { 10; } else { 5; };
print(result);
