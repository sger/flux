// Test: Variables with let
// Expected output:
// 5
// 10
// 15
// hello
// true

// Note: This example uses semicolons (traditional style)
// Semicolons are optional at top level - both styles work!
// See examples/basics/semicolons.flx for complete rules

let x = 5;  // Semicolon optional
print(x);

let y = 10;
print(y);

print(x + y);

let name = "hello";
print(name);

let flag = true;
print(flag);
