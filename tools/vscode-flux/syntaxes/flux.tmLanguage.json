{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Flux",
  "scopeName": "source.flux",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#identifiers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.flux",
          "begin": "/\\*\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.flux",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.flux",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flux",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flux",
              "match": "\\\\(?:[\\\"nrtbf]|x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]{1,6}\\})"
            },
            {
              "name": "meta.interpolation.flux",
              "begin": "#\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#comments" },
                { "include": "#strings" },
                { "include": "#numbers" },
                { "include": "#keywords" },
                { "include": "#constants" },
                { "include": "#identifiers" },
                { "include": "#operators" },
                { "include": "#punctuation" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.flux",
          "match": "\\b\\d+(?:_\\d+)*(?:\\.\\d+(?:_\\d+)*)?(?:[eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flux",
          "match": "\\b(?:if|else|match|return|import|module|as)\\b"
        },
        {
          "name": "storage.type.function.flux",
          "match": "\\b(?:fun|let)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.flux",
          "match": "\\b(?:true|false)\\b"
        },
        {
          "name": "support.type.variant.flux",
          "match": "\\b(?:Some|None|Left|Right)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.call.flux",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "variable.other.flux",
          "match": "\\b[a-z_][A-Za-z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.module.flux",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.flux",
          "match": "\\|>|->|==|!=|<=|>=|&&|\\|\\||=|\\+|-|\\*|/|%|!|<|>"
        },
        {
          "name": "keyword.operator.accessor.flux",
          "match": "\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.flux",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.section.braces.begin.flux",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.flux",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.flux",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.flux",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.flux",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.flux",
          "match": "\\]"
        },
        {
          "name": "keyword.operator.lambda.flux",
          "match": "\\\\"
        }
      ]
    }
  }
}
